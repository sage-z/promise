{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": false,
    "suppressImplicitAnyIndexErrors": true,
    "paths": {
      "@/*": ["app/renderer/*"],
      "main/*": ["app/main/*"],
      "libs/*": ["app/libs/*"],
      "*": ["node_modules/*"]
    }
  },
  "include": ["app/**/*"],
  "exclude": ["app/renderer/components/**/__tests__/*"]
}